{
    "manifest_version": 2,

    "name": "Your notifier",
    "short_name": "YoN",
    "description": "Helps to gather and monitor data from different online sources",
    "version": "1.0.6.2",
    "browser_action": {
        "default_icon": "img/icon32x32.png",
        "default_popup": "popup.html",
        "default_title": "Your notifier"
    },
    "background": {
        "scripts": ["lib/jquery-2.0.3.min.js", "lib/jquery-2.0.3.min.map",
                    "lib/underscore-min.js", "js/common.js", "js/urlChecker.js", "js/schedule.js",
                    "js/dialogEventPage.js", "js/notification.js",
                    "js/storageLocal.js", "js/storageSync.js", "js/ruleStorage.js", "js/storageUtils.js"],
        "persistent": false
    },
    "icons": {
        "16": "img/icon16x16.png",
        "48": "img/icon48x48.png",
        "128": "img/icon128x128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["/css/dialog.css"],
            "js": ["lib/jquery-2.0.3.min.js", "lib/jquery-ui-1.10.3.min.js", "lib/selectorator.min.js", "js/common.js",
                   "js/dialogContentScript.js"]
        }
    ],
    "web_accessible_resources": ["dialog.html"],
    "permissions": [ "<all_urls>" , "storage", "alarms", "tabs", "notifications", "contextMenus"],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}